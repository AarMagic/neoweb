<header
  class="flex max-phone:flex-col justify-between items-center p-4 border-b-2"
>
  <a href="/">
    <img
      class="w-20 max-phone:pb-3"
      src="/logo.svg"
      alt="Logo principal de la web Neo Web"
    />
  </a>
  <svg
    class="max-phone:block hidden cursor-pointer mb-2"
    id="boton-navegacion"
    xmlns="http://www.w3.org/2000/svg"
    height="24px"
    viewBox="0 -960 960 960"
    width="24px"
    fill="#FD606B"
    ><path
      d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"
    ></path></svg
  >
  <nav
    class="navegacion hidden flex max-phone:flex-col items-center gap-5 phone:flex"
  >
    <a href="/">Inicio</a>
    <a href="/">Recursos</a>
    <a href="/">Tendencia</a>
    <a href="/">Acerca de</a>
  </nav>
</header>
<style>
  .navegacion a:hover {
    color: #FD606B;
  }
</style>
<script>
  const botonNavegacion = document.querySelector("#boton-navegacion");
  botonNavegacion.addEventListener("click", () => {
    const navegacion = document.querySelector(".navegacion");

    navegacion.classList.toggle("hidden");
  });
</script>
